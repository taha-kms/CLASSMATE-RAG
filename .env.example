# Environment variables example for CLASSMATE-RAG
# Embedding model (Sentence-Transformers)
EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-base

# LLM backend and model
LLM_BACKEND=llama_cpp
LLM_MODEL_PATH=./models/LLama-3.1-8B-Instruct.Q4_K_M.gguf

# ChromaDB persistence
CHROMA_PERSIST_DIRECTORY=./indexes/chroma
CHROMA_COLLECTION_NAME=classmate_rag

# Retrieval / chunking defaults
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
K_VECTOR=8
K_BM25=8
USE_HYBRID=true

# Processing toggles
ENABLE_OCR=false
ENABLE_LANGUAGE_DETECTION=true

# Language behavior: default auto-detect; options: en, it, auto
DEFAULT_LANGUAGE=auto

# Logging
LOG_LEVEL=INFO
